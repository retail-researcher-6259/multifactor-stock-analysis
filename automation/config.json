{
  "regime_detection": {
    "schedule": {
      "enabled": true,
      "time": "06:00",
      "timezone": "Asia/Taipei",
      "run_on_weekends": false,
      "check_market_open": true
    },
    "historical_detection": {
      "enabled": true,
      "lookback_years": 10,
      "data_source": "yfinance",
      "symbols": ["SPY", "^VIX", "^TNX", "GLD"],
      "n_regimes": 3,
      "timeout_seconds": 600
    },
    "current_detection": {
      "enabled": true,
      "timeout_seconds": 300
    },
    "output": {
      "save_plots": true,
      "save_reports": true,
      "email_notifications": false,
      "email_recipients": []
    },
    "logging": {
      "level": "INFO",
      "max_log_files": 30,
      "log_file_prefix": "regime_detection"
    },
    "error_handling": {
      "max_retries": 3,
      "retry_delay_seconds": 60,
      "continue_on_error": false
    }
  },
  "paths": {
    "regime_detector_script": "src/regime_detection/regime_detector.py",
    "current_detector_script": "src/regime_detection/current_regime_detector.py",
    "output_dir": "output",
    "logs_dir": "automation/logs",
    "status_dir": "automation/status"
  },
  "multifactor_scoring": {
    "enabled": true,
    "run_after_regime": true,
    "regimes_to_process": [
      "Steady_Growth",
      "Strong_Bull",
      "Crisis_Bear"
    ],
    "ticker_file": "config/Buyable_stocks_0901.txt",
    "timeout_seconds": 7200,
    "parallel_processing": false,
    "output": {
      "save_top_n": 100,
      "generate_reports": true
    }
  },
  "trend_analysis": {
    "enabled": true,
    "lookback_days": 90,
    "min_appearances": 5,
    "skip_technical": false,
    "top_stocks_for_technical": 10,
    "output": {
      "generate_plots": true,
      "save_recommendations": true
    }
  },
  "integrated_pipeline": {
    "enabled": true,
    "schedule": {
      "time": "08:30",
      "timezone": "Asia/Taipei",
      "run_on_weekends": false
    },
    "workflow": [
      "regime_detection",
      "multifactor_scoring"
    ],
    "continue_on_error": true
  }
}